        string network_type
    }

    FEATURE {
        bigint id PK
        string name
        string description
        datetime created_at
        datetime updated_at
    }

    BAND {
        bigint id PK
        string band_number
        string technology
        string frequency_range
        string band_class
    }

    COMBO {
        bigint id PK
        string name
        string technology
    }

    DEVICE {
        bigint id PK
        string vendor
        string model_num
        string market_name
        date release_date
        datetime created_at
        datetime updated_at
    }

